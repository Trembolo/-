#include <iostream>
using namespace std;

int main()
{
setlocale(LC_ALL, "Rus");
float a;
cout << "Введите значение угла:";
cin >> a;
cout <<"Значение угла: " << (a*3.14) / 180;
return 0;
}

#include <iostream>
using namespace std;
int main()
{
setlocale(LC_ALL, "Rus");
float x;
cout << "Введите значение угла:";
cin >> x;
cout << "Значение угла:" << x * 180 / 3.14;
return 0;
}

#include <iostream>
using namespace std;
int main()
{
setlocale(LC_ALL, "Rus");
float x, a, y, b, c;
cout << "Введите x - килограммы:";
cin >> x;
cout << "Введите a - рубли:";
cin >> a;
c = a / x;
cout << "Введите y - килограммы:";
cin >> b;
y = c * b;
cout << "1 кг конфет стоит: " << c <<endl;
cout << b << " кг конфет стоит: " << y;
return 0;
}

#include <iostream>
using namespace std;
int main()
{
setlocale(LC_ALL, "Rus");
int v, v1, s, s1, t;
cout << "Введите v, v1, s1, t:";
cin >> v >> v1 >> s >> t;
cout << "Расстояние:";
s1 = (v*t) + (v1*t) + s;
cout << s1;
return 0;
}

#include <iostream>
using namespace std;
int main()
{
setlocale(LC_ALL, "Rus");
double A, B;
cout << "Введите A и B:";
cin>> A >> B;
if (A != 0)
cout<< "x=" << -B / A;
return 0;
}

#include <iostream>
using namespace std;
int main()
{
double a1 = 0, b1 = 0, c1 = 0, a2 = 0, b2 = 0, c2 = 0;
double D = 0;
double x = 0, y = 0;
cout << "a1= ";
cin >> a1;
cout << "b1=";
cin >> b1;
cout << "c1=";
cin >> c1;
cout << "a2=";
cin >> a2;
cout << "b2=";
cin >> b2;
cout << "c2=";
cin >> c2;
D = a1 * b2 - a2 * b1;
if (D != 0)
{
x = (c1*b2 - c2 * b1) / D;
y = (a1*c2 - a2 * c1) / D;
cout << "\n x= " << x << " y=" << y << endl;
}
else {
cout << " a1*b2 - a2*b1 = 0" << endl;
}
system("pause");
return 0;
}
