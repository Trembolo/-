#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");
	double x1, x2, y1, y2, s;
	cout << "Введите x1 и y1";
	cin >> x1 >> y1;
	cout << "Введите x2 и y2";
	cin >> x2 >> y2;
	s = sqrt((x2 - x1)*(x2-x1) + (y2 - y1)*(y2-y1));
	cout << "S="<< s;

}

#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");
	double x1, x2, x3, sum, AC, BC;
	cout << "Введите координаты A";
	cin >> x1;
	cout << "Введите координаты B";
	cin >> x2;
	cout << "Введите координаты C";
	cin >> x3; 
	AC = x3 - x1;
	BC = x3 - x2;
	sum = AC + BC;
	cout << "AC=" << AC << endl;
	cout << "BC=" << BC << endl;
	cout << "Сумма AC+BC=" << sum;

}

#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");
	double A, B, C, AC, BC, X;
	cout << "Введите значение A";
	cin >> A;
	cout << "Введите значение B";
	cin >> B;
	cout << "значение C";
	cin >> C;
	AC = fabs(A - C);
	BC = fabs(C - B);
	X = AC * BC;
	cout << "AC=" << AC << endl;
	cout << "BC=" << BC << endl;
	cout << "Произведение AC и BC:" << X;

}

#include <iostream>
using namespace std;
int main()

{
	setlocale(LC_ALL, "Rus");
	double x1, y1, x2, y2, P, S;
	cout << "x1=";
	cin >> x1;
	cout << "x2=";
	cin >> x2;
	cout << "y1=";
	cin >> y1;
	cout << "y2=";
	cin >> y2;
	P = 2 * (abs(x1 - x2) + abs(y1 - y2));
	S = abs(x1 - x2)*abs(y1 - y2);
	cout << "Периметр раввен " << P << endl;
	cout << "Площадь равна " << S << endl;
}

#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");
	float x1, x2, x3, y1, y2, y3;
	float S, P;
	float a, b, c, p;
	cout << "Координата x1 и y1 ";
	cin >> x1 >> y1;
	cout << "Координата x2 и y2 ";
	cin >> x2 >> y2;
	cout << "Координата x3 и y3: "; 
	cin >> x3 >> y3;
	a = sqrt(((x2 - x1)*(x2 - x1)) + ((y2 - y1)*(y2 - y1)));
	b = sqrt(((x2 - x3)*(x2 - x3)) + ((y2 - y3)*(y2 - y3)));
	c= sqrt(((x3 - x1)*(x3 - x1)) + ((y3 - y1)*(y3 - y1)));
	P = a + b + c;
	p = P / 2;
	S = sqrt(p*(p - a)*(p - b)*(p - c));
	cout << "Периметр= " << P << endl << "Площадь= " << S;
	
	return 0;
}
